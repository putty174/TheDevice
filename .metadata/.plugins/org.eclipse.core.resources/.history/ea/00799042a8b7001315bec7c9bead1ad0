package com.pressx.managers;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

import com.pressx.objects.GameObject;
import com.pressx.objects.enemy.MonsterManager;
import com.pressx.objects.items.MineDrop;
import com.pressx.screens.game.Room;
import com.pressx.thedevice.GameStats;

public class DesignHelper {
	
	Draw d;
	Sounds s;
	Textures t;
	Room r;
	GameStats stats;
	boolean isSpawned = false;
	
	public DesignHelper(Draw d, Sounds s, Textures t, GameObject o, Room room, GameStats stats){
		final MineDrop mineDrop = new MineDrop(d, s, t, stats, 50, 30);
		this.d = d;
		this.s = s;
		this.t = t;
		this.stats = stats;
		r = room;
		JFrame frame = new JFrame("Design_Helper_0.2");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		JButton spawnFuzzOne = new JButton("Spawn Fuzz One");
		
		spawnFuzzOne.addActionListener(
			new ActionListener(){
				public void actionPerformed(ActionEvent e){
					emeny = mon.spawnMonster(1, 0 , 0);
					isSpawned = false;
				}
		});
		
		JButton spawnFuzzTwo = new JButton("Spawn Fuzz Two");
		
		spawnFuzzTwo.addActionListener(
			new ActionListener(){
				public void actionPerformed(ActionEvent e){
					emeny = mon.spawnMonster(2, 0, 0);
					isSpawned = false;
			}
		});
		
		JButton spawnFuzzThree = new JButton("Spawn Fuzz Three");
		JButton spawnPlantOne = new JButton("Spawn Plant One");
		JButton spawnPlantTwo = new JButton("Spawn Plant Two");
		JButton spawnPlantThree = new JButton("Spawn Plant Three");
		JButton addMine = new JButton("Add Mine");
		
		addMine.addActionListener(
			new ActionListener(){
				public void actionPerformed(ActionEvent e){
					r.addDrop(mineDrop);
				}
			}
				);
		
		JButton addVort = new JButton("Add Vortex");
		
		frame.getContentPane().setLayout(new GridLayout(4,2));
		frame.add(spawnFuzzOne);
		frame.add(spawnFuzzTwo);
		frame.add(spawnFuzzThree);
		frame.add(spawnPlantOne);
		frame.add(spawnPlantTwo);
		frame.add(spawnPlantThree);
		frame.add(addMine);
		frame.add(addVort);
		frame.pack();
		frame.setVisible(true);
	}
	
	public GameObject update(){
		if(emeny != null && !isSpawned){
			isSpawned = true;
			return emeny;
		}
		return null;
	}
	
	private void addMonster(int ID){
		this.r.add_object(this.spawnMonster(ID, 0, 0));
	}
	
	private void addMonster(MonsterManager mon){
		
	}
}
